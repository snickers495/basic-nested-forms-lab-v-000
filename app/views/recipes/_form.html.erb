<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  Ingredients:
  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :name %>
    <%= ing.text_field :name%>

    <%= ing.label :quantity %>
    <%= ing.text_field :quantity%>
  <% end %>
  <%= f.submit%>

<% end %>
